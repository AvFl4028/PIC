#include <display-7.h>

void cero() {
	bit_set(LED1);		//a
	bit_set(LED2);		//b
	bit_set(LED3);		//c
	bit_set(LED4);		//d
	bit_set(LED5);		//e
	bit_set(LED6);		//f
	bit_clear(LED7);	//g
}

void uno() {
	bit_clear(LED1);	//a
	bit_set(LED2);		//b
	bit_set(LED3);		//c
	bit_clear(LED4);	//d
	bit_clear(LED5);	//e
	bit_clear(LED6);	//f
	bit_clear(LED7);	//g
}

